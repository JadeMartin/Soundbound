# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.HomeController.create(request: Request)
POST /                              controllers.HomeController.save(request: Request)
GET /index                          controllers.HomeController.index

# Login
GET /login                          controllers.HomeController.login(request: Request)
POST /login                         controllers.HomeController.validate(request: Request)

GET /user                           controllers.HomeController.showCurrentUser(request: Request)
GET /logout                         controllers.HomeController.logout(request: Request)

#GET /user/deletedestination         controllers.HomeController.deleteDestination(request: Request)

# Profiles
GET     /profiles                   controllers.HomeController.listProfile
GET     /profile                    controllers.HomeController.searchProfile(request: Request)
GET     /profile/search             controllers.HomeController.listOne(request: Request)
GET     /partner/                   controllers.HomeController.searchPartner(request: Request)
GET     /partner/search             controllers.HomeController.listPartners(request: Request)

# Destinations
GET     /destinations               controllers.HomeController.listDestinations


#Destinations
GET     /profile/create_destination controllers.HomeController.createDestination(request: Request)
POST    /profile/create_destination controllers.HomeController.saveDestination(request: Request)

# Delete a computer
#POST    /computers/:id/delete       controllers.HomeController.delete(id:Long)

# Edit profile
GET     /profiles/edit/:email        controllers.HomeController.editProfile(request: Request, email:String)
POST    /profiles/edit/              controllers.HomeController.updateProfile(request: Request)

# Delete profile
#POST    /profiles/:id/delete       controllers.HomeController.deleteProfile(id:String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
